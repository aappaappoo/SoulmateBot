# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# AI Provider Configuration (Choose one or multiple)
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# vLLM (Self-hosted LLM inference)
VLLM_API_URL=http://localhost:8000
VLLM_API_TOKEN=your_vllm_api_token_here
VLLM_MODEL=default

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/soulmatebot
REDIS_URL=redis://localhost:6379/0

# Application Configuration
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# Subscription & Payment Configuration
# Stripe
STRIPE_API_KEY=your_stripe_api_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# WeChat Pay
WECHAT_PAY_APP_ID=your_wechat_app_id_here
WECHAT_PAY_MCH_ID=your_merchant_id_here
WECHAT_PAY_API_KEY=your_api_key_here
WECHAT_PAY_API_V3_KEY=your_api_v3_key_here
WECHAT_PAY_CERT_SERIAL_NO=your_cert_serial_no_here
WECHAT_PAY_PRIVATE_KEY_PATH=/path/to/apiclient_key.pem
WECHAT_PAY_NOTIFY_URL=https://your-domain.com/wechat/notify

# Subscription Plans
FREE_PLAN_DAILY_LIMIT=10
BASIC_PLAN_DAILY_LIMIT=100
PREMIUM_PLAN_DAILY_LIMIT=1000

# Security
SECRET_KEY=your_secret_key_here
ADMIN_USER_IDS=123456789,987654321

# Rate Limiting
RATE_LIMIT_MESSAGES_PER_MINUTE=10
RATE_LIMIT_IMAGES_PER_HOUR=5

# Voice/TTS Configuration
OPENAI_TTS_MODEL=tts-1
DEFAULT_VOICE_ID=alloy

# iFlytek (科大讯飞) TTS Configuration
# 需要在讯飞开放平台 https://www.xfyun.cn 注册并创建应用
IFLYTEK_APP_ID=your_iflytek_app_id_here
IFLYTEK_API_KEY=your_iflytek_api_key_here
IFLYTEK_API_SECRET=your_iflytek_api_secret_here
DEFAULT_IFLYTEK_VOICE_ID=xiaoyan

# Qwen (通义千问) TTS Configuration - 阿里云 DashScope
# 需要在阿里云 DashScope https://dashscope.console.aliyun.com 注册并获取 API Key
DASHSCOPE_API_KEY=your_dashscope_api_key_here
DASHSCOPE_API_URL=wss://dashscope.aliyuncs.com/api-ws/v1/realtime
QWEN_TTS_MODEL=qwen3-tts-flash-realtime
DEFAULT_QWEN_VOICE_ID=Cherry
# Qwen TTS 可用音色：
# - Cherry: 阳光积极、亲切自然的女性音色
# - Serena: 温柔的女性音色
# - Ethan: 阳光、温暖、活力的男性音色
# - Chelsie: 虚拟风格女生
# - Dylan: 北京话风格男声
# - Jada: 上海话风格女声
# - Sunny: 四川话女声

TTS_PROVIDER=qwen  # openai, iflytek 或 qwen

# Embedding Configuration (向量嵌入配置 - 用于对话记忆RAG)
# 使用DashScope或OpenAI提供向量嵌入服务
EMBEDDING_PROVIDER=dashscope  # dashscope 或 openai
EMBEDDING_MODEL=text-embedding-v3  # DashScope: text-embedding-v3, OpenAI: text-embedding-3-small
MEMORY_SIMILARITY_THRESHOLD=0.5  # 记忆检索的最低相似度阈值 (0-1)

# Search Agent / SERP API Configuration (搜索代理配置 - 用于实时网络搜索)
# 支持多个 API key 轮用，逗号分隔
SERP_API_KEYS=your_serp_api_key_1,your_serp_api_key_2,your_serp_api_key_3
SERP_CACHE_TTL=3600  # 搜索缓存过期时间（秒），默认1小时，适用于热门话题
SERP_TOP_K=5  # 返回搜索结果数量
SERP_API_PROVIDER=serpapi  # 搜索API提供商：serpapi, google, bing
